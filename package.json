{
  "name": "docgen-tool",
  "version": "3.0.3",
  "description": "A tool for creating HTML and PDF documentation",
  "main": "dist/docgen.js",
  "bin": {
    "docgen": "dist/docgen.js"
  },
  "files": [
    "dist/*"
  ],
  "scripts": {
    "clean": "rimraf dist/",
    "copy-files": "copyfiles source/katexInjector.js source/example/**/* source/optional/**/* source/require/**/* source/templates/**/* dist/",
    "dev": "ts-node docgen.js run",
    "build": "yarn clean && tsc -p tsconfig.json && yarn copy-files",
    "run:build": "dist/docgen.js",
    "build:docs": "ts-node docgen.js run -i ./source/user-guide -o ./docs -p -m -n -d 40000",
    "test": "npm run prettier:check",
    "test:run": "ts-node docgen.js run -i ./source/__test__/test-run -o ./source/__test__/test-run-output",
    "test:prod:run": "./dist/docgen.js run -i ./source/__test__/test-run -o -p -v -d 20000 ../source/__test__/test-run-output",
    "prettier:check": "prettier --check 'docgen.js' '*.{js,json,css,less}'",
    "prettier:fix": "prettier --write 'docgen.js' '*.{js,json,css,less}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,less}": "prettier --write",
    "docgen": "prettier --write"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "cheerio": "^1.0.0-rc.12",
    "cli-spinner": "^0.2.10",
    "commander": "^11.0.0",
    "fs-extra": "^11.1.1",
    "husky": "^4.3.0",
    "image-size": "^1.0.2",
    "lint-staged": "^10.5.1",
    "markdown-it": "^13.0.1",
    "moment": "^2.29.4",
    "rsvp": "^4.8.5",
    "spawn-args": "^0.2.0",
    "z-schema": "^6.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.3.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "prettier": "^2.1.2",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.3",
    "typescript": "^5.1.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mtmacdonald/docgen"
  },
  "author": "Inkit Inc. and contributors",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mtmacdonald/docgen/issues"
  },
  "homepage": "http://mtmacdonald.github.io/docgen/docs/index.html"
}
