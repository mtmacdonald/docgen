{
  "name": "docgen-tool",
  "type": "module",
  "version": "5.3.0",
  "description": "A tool for creating HTML and PDF documentation",
  "bin": "./dist/cli/cli.js",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "check:types": "tsc --noEmit",
    "bundle:cli": "vite build --config ./vite.bundle.cli.config.ts && chmod +x dist/cli/cli.js",
    "bundle:app": "rimraf dist/app dist/template && ncp src/app dist/app && ncp src/template dist/template",
    "bundle": "yarn bundle:cli && yarn bundle:app",
    "dev:docs": "tsx src/cli/cli.ts dev -i src/docs -o ./docs",
    "build:docs": "tsx src/cli/cli.ts build -i src/docs -o ./docs",
    "preview:docs": "npx serve -s ./docs",
    "build:styles": "rimraf src/app/style-variables && npx style-dictionary build && sass --no-source-map src/styles/main.scss src/app/views/assets/styles/framework.css && yarn prettier:fix",
    "test": "npm run prettier:check",
    "test:run": "tsx src/cli/cli.ts build -i src/__test__/test-run -o src/__test__/test-run-output",
    "test:scaffold": "tsx src/cli/cli.ts scaffold -o src/__test__/test-run-output",
    "test:prod:run": "./dist/cli/cli.js build -i src/__test__/test-run -o ../source/__test__/test-run-output",
    "prettier:check": "prettier --check 'src/**/*.{ts,js,json,css,scss}'",
    "prettier:fix": "prettier --write 'src/**/*.{ts,js,json,css,scss}'",
    "test:publish": "sh ./src/__test__/test-publish/test-publish.sh",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.{ts,js,json,css,scss}": "prettier --write",
    "docgen": "prettier --write"
  },
  "dependencies": {
    "@react-pdf/renderer": "^4.3.0",
    "@tanstack/react-router": "^1.130.12",
    "@vitejs/plugin-react": "^5.0.0",
    "cheerio": "^1.1.2",
    "classnames": "^2.5.1",
    "commander": "^14.0.0",
    "fs-extra": "^11.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "marked": "^16.2.0",
    "picocolors": "^1.1.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "react-pdf-html": "^2.1.3",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "vite": "npm:rolldown-vite@latest",
    "z-schema": "^6.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/node": "^24.1.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "ncp": "^2.0.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "sass": "^1.89.2",
    "style-dictionary": "^5.0.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mtmacdonald/docgen"
  },
  "author": "Inkit Inc. and contributors",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mtmacdonald/docgen/issues"
  },
  "homepage": "https://mtmacdonald.github.io/docgen/docs/index.html"
}
